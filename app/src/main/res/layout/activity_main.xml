<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="10dp" android:background="@color/colorPrimary">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:inputType="textPersonName"
            android:text="0"
            android:ems="10"
            android:id="@+id/editText" android:gravity="bottom|right" android:paddingTop="10dp"
            android:textSize="50sp" android:background="@color/colorDarkGreyScreen"
            android:textColor="@color/colorWhite" android:paddingRight="5dp"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="C"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button6" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button5" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button4" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="/"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button3" android:background="@color/colorOrange"
                    android:textColor="@color/colorWhite"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button10" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button9" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button8" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="x"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button7" android:background="@color/colorOrange"
                    android:textColor="@color/colorWhite"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button12" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button14" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button13" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button11" android:background="@color/colorOrange"
                    android:textColor="@color/colorWhite"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button18" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button17" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button16" android:background="@color/colorGreyBtn"/>
            <Button
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button15" android:background="@color/colorOrange"
                    android:textColor="@color/colorWhite"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:layout_width="60pt"
                android:layout_height="30pt" android:id="@+id/button21" android:layout_weight="1"
                android:background="@color/colorGreyBtn"/>
        <Button
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/button20" android:layout_weight="1"
                android:background="@color/colorGreyBtn"/>
        <Button
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/button19" android:layout_weight="1"
                android:background="@color/colorOrange" android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>